package com.bridgelabz.Utility;

public class Deque 
{
	static final int max=100;
	
	int arr[];
	int size;
	int front;
	int rear;
	
	public Deque(int size)
	{
		arr=new int[max];
		front=-1;
		rear=0;
		this.size=size;
	}
	
	boolean isempty()
	{
		return (front==-1);
	}
	
	void addFront(int item)
	{
		if(rear==size-1 && front==-1)
		{
			System.out.println("queue is full");
		}
		
		if(front==-1)
		{
			front=0;
			rear=0;
		}
		else if(front==0)
			front=size-1;
		else
			front=front-1;
		arr[front]=item;
	}
	
	
	void addrear(int item)
	{
		if(front==-1)
		{
			front=0;
			rear=0;
		}
		else if(rear==size-1)
			rear=0;
		else
			rear=rear+1;
		arr[rear]=item;
	}
	
	
	void removefront()
	{
		if(front==rear)
		{
			front=-1;
			rear=-1;
		}
		else
		{
			if(front==rear)
			{
				front=0;
			}
			else
			{
				front=front+1;
			}
		}
	}
	
	
	void removerear()
	{
		if(front==rear)
		{
			front=-1;
			rear=-1;
		}
		else if(rear==0)
		{
			rear=size-1;
		}
		else
			rear=rear-1;
	}
}
