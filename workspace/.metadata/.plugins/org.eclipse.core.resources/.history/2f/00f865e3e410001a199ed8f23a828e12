package com.bridgelabz.junitTesting.TestCases;
//import static org.junit.Assert.*;
import junit.framework.Assert;

import org.junit.Test;

import com.bridgelabz.junitTesting.MonthlyPayment;

public class Payment {
	
	@Test
	public void givenZero_WhenpaymentShouldbe_Zero() {
		int result = MonthlyPayment.Payment(0, 2, 10);
		Assert.assertEquals(1061,result);
	}
	
	@Test
	public void givenOne_WhenpaymentShouldbe_one() {
		int result = MonthlyPayment.Payment(23, 2, 10);
		Assert.assertEquals(1061,result);
	}
	
	@Test
	public void given23_WhenpaymentShouldbe_() {
		int result = MonthlyPayment.Payment(23, 2, 10);
		Assert.assertEquals(1061,result);
	}
	
	@Test
	public void given230_WhenpaymentShouldbe_() {
		int result = MonthlyPayment.Payment(230, 2, 10);
		Assert.assertEquals(1061,result);
	}
	@Test
	public void given2300_WhenpaymentShouldbe_() {
		int result = MonthlyPayment.Payment(23000, 2, 10);
		Assert.assertEquals(1061,result);
	}
	@Test
	public void given23000_WhenpaymentShouldbe_() {
		int result = MonthlyPayment.Payment(23000, 2, 10);
		Assert.assertEquals(1061,result);
	}
}
